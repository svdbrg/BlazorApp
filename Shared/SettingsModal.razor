<MudDialog Class="settings-modal">
    <DialogContent>
        <BlazorApp.Shared.Components.SettingsMortgage @ref="settingsMortgage" />
        <BlazorApp.Shared.Components.SettingsLiveDisplayer @ref="settingsLiveDisplayer" />
        <BlazorApp.Shared.Components.SettingsTravelPlanner @ref="settingsTravelPlanner" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = new();
    private BlazorApp.Shared.Components.SettingsMortgage settingsMortgage = new();
    private BlazorApp.Shared.Components.SettingsLiveDisplayer settingsLiveDisplayer = new();
    private BlazorApp.Shared.Components.SettingsTravelPlanner settingsTravelPlanner = new();
    private async void Submit()
    {
        await saveChanges();
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();

    private async Task saveChanges()
    {
        await settingsMortgage.saveMortgageSettings();
        settingsLiveDisplayer.saveLiveDisplayerSettings();
        settingsTravelPlanner.saveTravelPlannerSettings();
    }  
}