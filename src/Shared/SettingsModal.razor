@using BlazorApp.Shared.Components
@using BlazorApp.Features.Shared.Models

@inject SettingsState _settingsState

<MudDialog Class="settings-modal">
    <DialogContent>
        <SettingsMortgage />
        <SettingsLiveDisplayer />
        <SettingsTravelPlanner />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = new();

    private SettingsMortgage settingsMortgage = new();
    private SettingsLiveDisplayer settingsLiveDisplayer = new();
    private SettingsTravelPlanner settingsTravelPlanner = new();

    private void Submit()
    {
        _settingsState.IsSaving();
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}