@page "/"
@using Microsoft.Extensions.Options;
@using BlazorApp.Features.Shared.Models

@inject IOptions<List<FeatureInformation>> _options;


<PageTitle>Oscar's Playground</PageTitle>

<MudText Typo="Typo.h2">Hello, world!</MudText>

<MudText Typo="Typo.body1">This is where I collect minor project ideas and technologies I want to try out.</MudText>

@foreach (var item in _options.Value)
{
    <MudCard Style="margin-bottom:20px;" Class="mud-theme-primary">
        <MudCardContent>
            <MudText Typo="Typo.h5">@item.Name</MudText>
            <MudText Typo="Typo.body2">@item.Description</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Link="@item.NavMenuItem.Href" Color="Color.Tertiary">Learn More</MudButton>
        </MudCardActions>
    </MudCard>
}