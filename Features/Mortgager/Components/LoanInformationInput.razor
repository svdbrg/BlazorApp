@using Data

<MudCard>
    <MudCardContent>
        <MudForm>
            <MudTextField T="int" Disabled="@(!canEdit)" OnBlur="onSaveChanges" Label="Purchase price SEK" @bind-Value="mortgage.PurchasePrice" />
            <MudTextField T="int" Disabled="@(!canEdit)" OnBlur="onSaveChanges" Label="Down payment SEK" @bind-Value="mortgage.DownPayment" />
            <MudTextField T="double" Disabled="@(!canEdit)" OnBlur="onSaveChanges" Label="Interest rate %" @bind-Value="mortgage.InterestRate" />
            <MudTextField T="int" Disabled="@(!canEdit)" OnBlur="onSaveChanges" Label="Total monthly salary" @bind-Value="mortgage.TotalSalary" />
        </MudForm>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public MortgageItem mortgage { get; set; } = new();

    [Parameter]
    public bool canEdit { get; set; }

    [Parameter]
    public EventCallback onSaveChanges { get; set; }
}